

@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MicroVistaMVC</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="~/lib/MDB/css/mdb.lite.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>




</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MicroVista Test</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                    <ul class="navbar-nav d-flex">

                        @{
                            if (HttpContextAccessor.HttpContext.Session.GetString("StudentImage") != null)
                            {
                                <li class="dropdown nav-item">
                                    <img class="card-img-top" src="~/uploads/@HttpContextAccessor.HttpContext.Session.GetString("StudentImage")"
                                         alt="@HttpContextAccessor.HttpContext.Session.GetString("StudentImage")" style="height:100%;width:40px;border-radius:20px;">
                                </li>
                            } }

                        <li class="nav-item">
                            @{ if (HttpContextAccessor.HttpContext.Session.GetString("StudentName") != null)
                                { <a class="btn btn-white rounded " asp-area="" asp-controller="Dashboard" asp-action="" style="border: 1px solid black; border-radius: 5px; margin-left: 20px; margin-right: 20px;">
                                        <i class="fas fa-tachometer-alt fa-x"></i> DASHBOARD
                                    </a> } }
                        </li>



                        <li class="dropdown nav-item">
                            <button class="btn btn-white dropdown-toggle rounded" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false" style="border: 1px solid black; border-radius: 5px; margin-left: 20px; margin-right: 20px;">
                                @{
                                    if (HttpContextAccessor.HttpContext.Session.GetString("StudentName") != null)
                                    {
                                        <i class="fas fa-user-graduate fa-x"></i> @HttpContextAccessor.HttpContext.Session.GetString("StudentName")

                                    }
                                    else
                                    {
                                        <tt data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" style="margin:0px;"> <i class="fas fa-user-graduate fa-x"></i> Login/Signup</tt>
                                    }
                                }
                            </button>
                            @{
                                if (HttpContextAccessor.HttpContext.Session.GetString("StudentName") != null)
                                {
                                    <ul class="dropdown-menu  bg-white" aria-labelledby="dropdownMenuButton2">
                                        <li><a class="dropdown-item btn-primary" href="#"> @HttpContextAccessor.HttpContext.Session.GetString("UserRole") : User</a></li>
                                        <li><a class="dropdown-item active" href="#">Email: @HttpContextAccessor.HttpContext.Session.GetString("StudentMail") </a></li>
                                        <li><a class="dropdown-item" href="#">DOB: @HttpContextAccessor.HttpContext.Session.GetString("StudentDOB")  </a></li>
                                        <li><a class="dropdown-item" href="#">Address: @HttpContextAccessor.HttpContext.Session.GetString("StudentAddress") </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item bg-danger" asp-area="" asp-controller="Home" asp-action="LogOut">  <i class="fas fa-sign-out-alt fa-x"></i>  Logout</a></li>
                                    </ul>
                                }
                                else
                                {
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                                        <li><a class="dropdown-item bg-primary" href="#">Login First</a></li>
                                    </ul>
                                }
                            }
                        </li>


                    </ul>

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SocialMedia">Social Media</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin Panel ( For Admin Only ) </a>
                        </li>


                    </ul>



                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MicroVistaMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>










    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>








    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>

    


    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script src="~/lib/MDB/js/mdb.min.js"></script>


    <script type="text/javascript">

        $(document).ready(function () {
            $('#DashboardStudentList').DataTable();
            $('#AdminStudentList').DataTable();
        });




    </script>



</body>
</html>
