@model MicroVistaMVC.Models.ViewModel

@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor



@{
    ViewData["Title"] = "Home Page";
}

<div class="row">

    <div class="col-lg-2">

    </div>

    <div class="col-lg-7">
        <div class="container-fluid row-padding">
            @{
                if (HttpContextAccessor.HttpContext.Session.GetString("StudentName") != null)
                {
                    Html.RenderPartial("AddingPost");
                }
            }

            <hr />



 

             

            <!--Carousel Wrapper-->
            <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel">
                <!--Indicators-->
                <ol class="carousel-indicators">
                    <li data-target="#carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel" data-slide-to="1"></li>
                    <li data-target="#carousel" data-slide-to="2"></li>
                </ol>
                <!--/.Indicators-->
                <!--Slides-->
                <div class="carousel-inner" role="listbox">
                    <!--First slide-->
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Sliders/1.png"
                             alt="First slide">
                    </div>
                    <!--/First slide-->
                    <!--Second slide-->
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Sliders/2.png"
                             alt="Second slide">
                    </div>
                    <!--/Second slide-->
                    <!--Third slide-->
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Sliders/3.png"
                             alt="Third slide">
                    </div>
                    <!--/Third slide-->
                    <!--Third slide-->
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Sliders/4.png"
                             alt="Third slide">
                    </div>
                    <!--/Third slide-->
                    <!--Third slide-->
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Sliders/5.png"
                             alt="Third slide">
                    </div>
                    <!--/Third slide-->
                    <!--Third slide-->
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Sliders/6.png"
                             alt="Third slide">
                    </div>
                    <!--/Third slide-->
                    <!--Third slide-->
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Sliders/7.png"
                             alt="Third slide">
                    </div>
                    <!--/Third slide-->
                    <!--Third slide-->
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Sliders/8.png"
                             alt="Third slide">
                    </div>
                    <!--/Third slide-->
                    <!--Third slide-->
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Sliders/9.png"
                             alt="Third slide">
                    </div>
                    <!--/Third slide-->


                </div>
                <!--/.Slides-->
                <!--Controls-->
                <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <!--/.Controls-->
            </div>
            <!--/.Carousel Wrapper-->


             
 



        </div>
    </div>


    <div class="col-lg-3">



        @{
            if (HttpContextAccessor.HttpContext.Session.GetString("StudentName") != null)
            { 
                Html.RenderPartial("ProfileImage");
              }
           }

    </div>

</div>


















<div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header btn-outline-warning ">
                <h5 class="modal-title btn-outline-warning " id="exampleModalToggleLabel">Registration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                @using (Html.BeginForm("Registration", "Home", FormMethod.Post))
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="mb-3">
                        <label for="StudentMail" class="form-label">Full Name </label>
                        @Html.TextBoxFor(x => x.StudentName, new { @class = "form-control" })
                        <br /> <span asp-validation-for="StudentName"></span>
                        @Html.ValidationMessageFor(x => x.StudentName)
                    </div>

                    <div class="mb-3">
                        <label for="StudentMail" class="form-label">Date of Birth </label>
                        <input type="date" class="form-control" name="StudentDOB" id="StudentDOB" />
                        <br /> <span asp-validation-for="StudentDOB"></span>
                        @Html.ValidationMessageFor(x => x.StudentDOB)
                    </div>


                    <div class="mb-3">
                        <label for="StudentMail" class="form-label">Email address</label>
                        @Html.TextBoxFor(x => x.StudentMail, new { @class = "form-control" })
                        <br /><span asp-validation-for="StudentMail"></span>
                        @Html.ValidationMessageFor(x => x.StudentMail)
                    </div>

                    <div class="mb-3">
                        <label for="EUserRole" class="form-label">Email address</label>
                        @Html.DropDownListFor(x => x.EUserRole, new SelectList(Enum.GetValues(typeof(Role))), "Select User Role", new { @class = "form-control" })
                        <br /><span asp-validation-for="EUserRole"></span>
                        @Html.ValidationMessageFor(x => x.EUserRole)
                    </div>



                    <div class="mb-3">
                        <label for="StudentPassword" class="form-label">Password</label>
                        @Html.PasswordFor(x => x.StudentPassword, new { @class = "form-control" })
                        <br /><span asp-validation-for="StudentPassword"></span>
                        @Html.ValidationMessageFor(x => x.StudentPassword)
                    </div>


                    <div class="mb-3">
                        <label for="StudentAddress" class="form-label">Student Address </label>
                        @Html.TextAreaFor(x => x.StudentAddress, new { @class = "form-control" })
                        <br /> <span asp-validation-for="StudentAddress"></span>
                        @Html.ValidationMessageFor(x => x.StudentAddress)
                    </div>


                    

                    @Html.ValidationSummary()

                    <button type="submit" class="btn btn-white btn-outline-primary"> <i class="fas fa-sign-in-alt fa-x"></i>   Submit </button>

                }

            </div>
            <div class="modal-footer">
                <button class="btn btn-white btn-outline-secondary" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal">Already have an Account? -- > </button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel2">Login</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">








                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label for="StudentMail" class="form-label">Email address</label>
                        @Html.TextBoxFor(x => x.StudentMail, new { @class = "form-control" })
                        <br /><span asp-validation-for="StudentMail"></span>
                        @Html.ValidationMessageFor(x => x.StudentMail)
                    </div>

                    <div class="mb-3">
                        <label for="StudentPassword" class="form-label">Password</label>
                        @Html.PasswordFor(x => x.StudentPassword, new { @class = "form-control" })
                        <br /><span asp-validation-for="StudentPassword"></span>
                        @Html.ValidationMessageFor(x => x.StudentPassword)
                    </div>

                    @Html.ValidationSummary()

                    <button type="submit" class="btn btn-white btn-outline-primary"> <i class="fas fa-sign-in-alt fa-x"></i>  Submit </button>
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-white btn-outline-success" data-bs-target="#exampleModalToggle" data-bs-toggle="modal">  <i class="fas fa-user-graduate fa-x"></i>   < -- Register Here. -- > </button>
            </div>
        </div>
    </div>
</div>








