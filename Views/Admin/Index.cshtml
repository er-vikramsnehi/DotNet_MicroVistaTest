@model IEnumerable<MicroVistaMVC.Models.StudentClass>


@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor





<p>
    <a asp-action="Create">Create New</a>
</p>






<div class="row">

    <div class="col-lg-2">

    </div>

    <div class="col-lg-7">
        <div class="container-fluid row-padding">

            @{
                if (HttpContextAccessor.HttpContext.Session.GetString("StudentName") != null)
                {
                    Html.RenderPartialAsync("AddingPost", "Home");

                }

            }


            <hr />




            <table  id="AdminStudentList" class="table table-striped table-bordered table-sm table-responsive" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentMail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentDOB)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentPassword)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentImage)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentMail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentDOB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentPassword)
                        </td>
                        <td>
                            <img class="card-img img-fluid" src="~/uploads/@Html.DisplayFor(modelItem => item.StudentImage)" alt="Not Uploaded " style="height:50px;width:50px;">
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>




        </div>
    </div>


    <div class="col-lg-3">



        @{
            if (HttpContextAccessor.HttpContext.Session.GetString("StudentName") != null)
            {
                Html.RenderPartialAsync("ProfileImage","Home");

            }

        }

    </div>

</div>






